<% provide(:title, 'Assign a Challenge') %>
<h1>Assign a Challenge</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@assigned_challenge) do |f| %>

      <h4>Select a challenge</h4>

      <%= options_from_collection_for_select(@challenges, :id, :name) %>
      <%= collection_select(:assigned_challenge, :challenge_id, @challenges, :id, :name) %>

      <h4>Select child</h4>

      <%= options_from_collection_for_select(@children, :id, :username) %>
      <%= collection_select(:assigned_challenge, :child_id, @children, :id, :username) %>

      <h4>Assign Points (9-999)</h4>
      
      <%= f.text_field(:points) %>

      <%= f.submit "Assign Challenge", class: "btn btn-large btn-primary" %>
    <% end %>


  </div>
</div>
