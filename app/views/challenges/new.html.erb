<% provide(:title, 'Create a Challenge') %>
<h1>Create a Challenge</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@challenge) do |f| %>

      <%= f.label :challenge_name, "Description" %>
      <%= f.text_field :challenge_name %>

      <%= f.label :point_value, "Point Value (9-999)" %>
      <%= f.text_field :point_value %>

      <%= f.label :public, "Public?" %>
      <%= f.check_box :public %>

      <%= f.submit "Create Challenge", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
