<% provide(:title, 'Create a Challenge') %>
<h1>Create a Challenge</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@challenge) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <h4>Select at least one category</h4>
      <%= options_from_collection_for_select(@categories, :id, :name) %>
      <%= collection_select(:challenge, :category_id, @categories, :id, :name) %>

      <%= f.label :public, "Public?" %>
      <%= f.check_box :public %>

      <%= f.submit "Create Challenge", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>