<div id="content">

<div id="avatarbase_contact">
  <div id="left_img_contact"><%= image_tag("avatars/ninjagirl_rt2.png", alt: "Ninja Girl") %></div>
</div><!--end #avatarbase-->

<div id="forty_left" class="align_lt">
 <%= form_for @message, :url => contact_path do |form| %>
    <h1>Have questions? Comments? We want to hear from you!</h1>
    <p>&nbsp;</p>
    <div align="center">
      <table width="auto" border="0" cellspacing="12" cellpadding="0" id="reg_table">
        <tr class="rowheight">
          <td width="135" height="40" class="labels">First Name:</td>
            <td width="278" height="40" class="fields"><%= form.text_field :first_name %></td>
            <td width="155" class="labels">Last Name:</td>
            <td width="242" class="fields"><%= form.text_field :last_name %></td>
          </tr>
        <tr class="rowheight", size="40">
          <td class="labels" height="40">Email:</td>
            <td class="fields"><%= form.text_field :email, size: "70" %></td>
            <td class="labels">&nbsp;</td>
            <td class="fields">&nbsp;</td>
          </tr>
        <tr class="rowheight">
          <td class="labels" height="40" valign="top"><p>Comment/Question(s):</p>
            </td>
            <td colspan="3" class="fields"><p>
              <%= form.text_area :body, :size => "70x5" %>
              </p>
            </td>
        </tr>
        <tr class="rowheight">
          <td colspan="4" class="labels"><div align="center">            <br />
            <%= form.submit :type => :image, :src => "/assets/send.png" %>
          </div></td>
          </tr>
      </table>
    </div>
 <% end %>

 <p>
  <!--end #forty_left-->
  <%= image_tag("spacer.gif", height: "150px") %></p>
 <p>&nbsp;</p>
 <p>&nbsp;</p>
 <p>&nbsp;</p>
 <p>&nbsp; </p>
</div> <!--end #content-->