<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("http://d3nf22m6d68s6c.cloudfront.net/622637/958174/1341028381/50.png", alt: "HealthMonsterLogo"), root_path %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <% if signed_in_as_parent? %>
              <%= render 'layouts/header_parent' %>
            <% elsif signed_in_as_child? %>
              <%= render 'layouts/header_child' %>
            <% end %>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>