<div id="header">
  <div id="logo">
    <%= link_to image_tag("HM_logo250w.png", alt: " HealthMonster", size: "250x91", class: "logo"),  root_path %>
  
    <div id="signreg">
      <% if signed_in? %>
        <% if signed_in_as_parent? %>
          <a href="#"><%= image_tag("HMGold.png", alt: "HealthMonster Gold", size: "19x23", border: "0") %></a> Join HealthMonster Gold | 
        <% end %>
        <%= link_to "sign out", signout_path, method: "delete" %>
      <% else %>
        <%= link_to "sign in |", signin_path %>
        <%= link_to "register", signup_path %>
      <% end %>
    </div>

    <div id="powerfields">
      <table width="275px" border="0" cellpadding="0"   cellspacing="2">
        <%= form_for(:session, url: sessions_path) do |f| %>
          <tr>
            <td width="120" class="fields"/>
              <% unless signed_in? %>
                  <%= f.text_field :email_username, id: "textfield" %>
                </td>
                <td width="120" class="fields"/>
                  <%= f.password_field :password, id: "textfield2" %>
                </td>
                <td>
                  <%= image_submit_tag("power.png", name: "commit", alt: "Submit") %>
                </td>
              </tr>
              <tr>
                <td width="120" class="fields"/>
                  <%= f.label :email_username, "Username", id: "textfield" %>  
                </td>
                <td width="120" class="fields"/>
                  <%= f.label :password, width: "120", class: "fields", id: "textfield2" %>
              <% else %>
                <%= image_tag("spacer.gif") %>
              <% end %>
            </td>
          </tr>
      </form>
    <% end %>
      </table>
    </div>

    <!--end #powerfields-->
  
    <div id="headernav">
      <% if signed_in? %>
        <% if signed_in_as_parent? %>
          <%= link_to "home |", parent_dash_path %>
          <%= render 'layouts/header_parent' %>
        <% elsif signed_in_as_child? %>
          <%= link_to "home |", root_path %>
          <%= render 'layouts/header_child' %>
        <% end %>
      <% else %>
        <%= link_to "home |", root_path %>
        <%= link_to "about |", about_path %>
        <%= link_to "contact", contact_path %>
      <% end %>
    </div> <!--End #headernav-->
  </div> <!--End #logo -->
  
  <div id="horizdiv">
    <%= image_tag("horiz_div958w.png") %>
  </div> <!--end #horizdiv-->
</div> <!--end #header-->




