<% provide(:title, 'Sign up') %>

<div id="content">

<div id="avatarbase_reg">
  <div id="left_img_reg"><%= image_tag("avatars/lion_lt.png", alt: "Lion") %></div>
</div><!--end #avatarbase-->

<div id="forty_left" class="align_lt">
  <h1>Register here to join HealthMonster:</h1>
  <p>&nbsp;</p>
  <div align="center" >
    <%= form_for(@parent) do |f| %>
      <%= render 'shared/error_messages' %>

      <table width="auto" border="0" cellspacing="12" cellpadding="0" id="reg_table">
        <tr class="rowheight">
          <td width="135" height="40" class="labels">Name: </td>
          <td width="278" height="40" class="fields"><%= f.text_field :name, size: "40", maxlength: "40" %></td>
        </tr>
        <tr class="rowheight">
          <td class="labels" height="40">E-mail:</td>
          <td class="fields"><%= f.text_field :email, size: "40" %></td>
        </tr>
        <tr class="rowheight">
          <td class="labels" height="40">Password:</td>
          <td class="fields"><%= f.password_field :password, size: "40" %></td>
        </tr>
        <tr class="rowheight">
          <td width="135" height= "40" class="labels">Confirm Password:</td>
          <td class="fields"><%= f.password_field :password_confirmation, size: "40" %></td>
        </tr>
        <tr>
          <td height="68" colspan="5" class="reg_inst"><div align="center">
            <p>
              <%= image_submit_tag("HM-Submit-A.png", name: "commit", alt: "Join HealthMonster") %>
            </p>
            <p>&nbsp;  </p>
          </div></td>
        </tr>
      </table>
    <% end %>

  <!--end #forty_left-->
  <%= image_tag("spacer.gif", height: "100px") %></p>
 <p>&nbsp;</p>
 <p>&nbsp;</p>
 <p>&nbsp; </p>
</div> <!--end #content-->