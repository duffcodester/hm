<% provide(:title, "Create a #{@resource.type.capitalize}") %>
<h1><%= "Create a #{@resource.type.capitalize}" %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@resource) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <% if @resource.type == "Challenge" %>
        <label>Category</label>
        <%= options_from_collection_for_select(@categories, :id, :name) %>
        <%= collection_select(:challenge, :category_id, @categories, :id, :name) %>
      <% end %>

      <%= f.label :public, "Public?" %>
      <%= f.check_box :public %>

      <%= f.submit "Create #{@resource.type.capitalize}", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>