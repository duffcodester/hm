<div id="par_content">
  <div id="avatarbase_contact">
    <div id="right_avatar_commpool"><img src="assets/avatars/cowboy.png" alt="cowboy" /></div>
  </div><!--end #avatarbase-->

  <p align="center"><img src="assets/Community-Pool-Bar_01.png" alt="Action Items" width="872" height="28" /></p>

  <div align="center"><br />
    <div ng-app="rewards">
      <div ng-controller="RewardsCommunityPoolCtrl">
        Search:
        <input ng-model="search">      

        Items per page:
        <select ng-model="items_per_page">
          <option value="5">5</option>
          <option value="10">10</option>
          <option value="25">25</option>
          <option value="50">50</option>
          <option value="100">100</option>
          <option value="200">200</option>
        </select>

        <table width="824" border="0" cellspacing="5" cellpadding="10" >
          <tr>
            <td width="794"  align="left" valign="top">
              <span class="par_mod_header">
                Rewards ({{items_per_page}}/<%= Reward.count(:all) %>)
              </span>
              <hr color="#e99723" align="left" width="95%"/>
            </td>
          </tr>

          <table width="461" border="0" cellspacing="3" cellpadding="0">
            <tbody ng-repeat="reward in rewards | filter:search | orderBy:'-updated_at' | limitTo:items_per_page" >
              <tr>
                <td width="400">{{reward.name}}</td>
                <td wdith="27">
                  <a ng-href="enabled_rewards/new?enabled_reward%5Breward_id%5D={{reward.id}}">
                    <img src="assets/check.png" alt="report abuse" width="17" height="17" />
                  </a>
                </td>
                <td width="27">
                  <a ng-href="report_abuse?message%5Bsubject%5D=Report+Abuse+-+{{reward.name}}">
                    <img src="assets/redflag.png" alt="report abuse" width="17" height="17" />
                  </a>
                </td>
              </tr>
            </tbody>
          </table>
        </table>
      </div>
    </div>
  </div>
  <p align="center">&nbsp;</p>
  <p align="center">&nbsp;</p>
</div><!--end #feature-->
</div> <!--end #wrap-->

<div id="spacer" ></div> <!--end #spacer-->

</body>
</html>
