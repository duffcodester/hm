<% provide(:title, 'Create a Reward') %>
<h1>Create a Reward</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@reward) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :public, "Public?" %>
      <%= f.check_box :public %>

      <%= f.submit "Create Reward", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>