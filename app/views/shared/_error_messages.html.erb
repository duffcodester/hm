<% if (@parent or @child).errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize((@parent or @child).errors.count, "error") %>.
    <ul>
    <% (@parent or @child).errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>